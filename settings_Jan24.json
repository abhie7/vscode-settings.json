{
  // open json editor for settings
  // "workbench.settings.editor": "json",

  // Theme
  "workbench.colorTheme": "Nyctophilia",
  "workbench.iconTheme": "moxer-icons",

  // Change font
  "editor.fontFamily": "Dank Mono",
  "scm.inputFontFamily": "Dank Mono",
  "terminal.integrated.fontFamily": "Dank Mono",
  "chat.editor.fontFamily": "Dank Mono",
  "debug.console.fontFamily": "Dank Mono",
  "editor.codeLensFontFamily": "Dank Mono",
  "notebook.output.fontFamily": "Dank Mono",
  "markdown.preview.fontFamily": "Dank Mono",
  "editor.inlayHints.fontFamily": "Dank Mono",

  // Font size
  "editor.fontSize": 19,
  "terminal.integrated.fontSize": 16,

  // ui
  "editor.minimap.enabled": false,
  "window.commandCenter": false,
  "editor.scrollbar.vertical": "auto",
  "window.titleBarStyle": "custom",
  "editor.scrollbar.horizontal": "auto",

  // APC
  "apc.activityBar": {
    "position": "bottom",
    "hideSettings": true,
    "size": 38
  },
  "apc.electron": {
    "titleBarStyle": "hiddenInset",
    "trafficLightPosition": {
      "x": 12,
      "y": 10
    }
  },
  "apc.font.family": "Dank Mono",
  "apc.monospace.font.family": "Dank Mono",
  "apc.statusBar": {
    "position": "editor-bottom",
    "height": 28,
    "fontSize": 12
  },

  // Custom css
  "apc.stylesheet": {
    ".sidebar > .composite": "height: 12px !important",
    ".title-label": "display: none !important",
    ".title-actions": "display: none !important",
    ".tabs-and-actions-container > .editor-actions": "display: none !important",
    ".titlebar-center": "display: none !important",
    ".titlebar-right": "display: none !important",
    ".inline-tabs-placeholder": "display: none !important",
    ".split-view-view .visible": "background-color: #110f17 !important"
  },

  "editor.snippetSuggestions": "top",
  "editor.inlineSuggest.enabled": true,

  // Color Theme Customization
  "workbench.colorCustomizations": {
    "[Nyctophilia]": {
      "activityBarBadge.background": "#C6FF00",
      "activityBar.activeBorder": "#C6FF00",
      "scrollbarSlider.activeBackground": "#C6FF0050",
      "editorSuggestWidget.highlightForeground": "#C6FF00",
      "textLink.foreground": "#C6FF00",
      "progressBar.background": "#C6FF00",
      "pickerGroup.foreground": "#C6FF00",
      "tab.activeBorder": "#C6FF00",
      "notificationLink.foreground": "#C6FF00",
      "editorWidget.resizeBorder": "#C6FF00",
      "editorWidget.border": "#C6FF00",
      "settings.modifiedItemIndicator": "#C6FF00",
      "settings.headerForeground": "#C6FF00",
      "panelTitle.activeBorder": "#C6FF00",
      "breadcrumb.activeSelectionForeground": "#C6FF00",
      "menu.selectionForeground": "#C6FF00",
      "menubar.selectionForeground": "#C6FF00",
      "editor.findMatchBorder": "#C6FF00",
      "selection.background": "#C6FF0040",
      "statusBarItem.remoteBackground": "#C6FF00"
    }
  },

  // Misc
  "workbench.startupEditor": "none",
  "explorer.compactFolders": false,
  "editor.tabSize": 2,
  "editor.linkedEditing": true,
  "breadcrumbs.filePath": "off",
  "files.trimTrailingWhitespace": true,
  "[markdown]": {
    "files.trimTrailingWhitespace": false
  },
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "window.zoomLevel": 0.75,

  "code-runner.runInTerminal": true,
  "code-runner.executorMap": {
    "javascript": "node",
    "php": "php",
    "python": "clear && python3 -u",
    "go": "go run",
    "powershell": "powershell -ExecutionPolicy ByPass -File",
    "shellscript": "bash",
    "csharp": "scriptcs",
    "typescript": "ts-node",
    "clojure": "lein exec",
    "rust": "cd $dir && rustc $fileName && $dir$fileNameWithoutExt",
    "sass": "sass --style expanded",
    "scss": "scss --style expanded"
  },
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.donotVerifyTags": true,
  "liveServer.settings.useWebExt": true,
  "php.suggest.basic": true,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "git.openRepositoryInParentFolders": "never",
  "editor.lineHeight": 0,
  "cSpell.userWords": ["lerp", "manhwas", "Nyctophilia", "Rigidbody"],
  "livePreview.notifyOnOpenLooseFile": false,
  "files.autoSave": "afterDelay",

  // Git
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "workbench.settings.applyToAllProfiles": [],

  //prettier
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "prettier.jsxSingleQuote": true,
  "prettier.semi": false,
  "terminal.integrated.env.windows": {},
  "terminal.integrated.env.osx": {}
}
